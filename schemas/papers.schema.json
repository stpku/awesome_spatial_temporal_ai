{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Papers",
  "type": "object",
  "properties": {
    "papers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "format": "uri" },
          "year": { "type": "integer", "minimum": 1990 },
          "venue": { "type": ["string", "null"] },
          "authors": { "type": ["string", "null"] },
          "domain": { "type": ["string", "null"] },
          "modality": { "type": ["string", "null"] },
          "method": { "type": ["string", "null"] },
          "datasets_used": { "type": ["array", "null"], "items": { "type": "string" } },
          "metrics": { "type": ["string", "null"] },
          "limitations": { "type": ["string", "null"] },
          "reproducibility": { "type": ["string", "null"] },
          "impact_summary": { "type": ["array", "null"], "items": { "type": "string" } },
          "tags": { "type": ["array", "null"], "items": { "type": "string" } }
        },
        "required": ["title", "url", "year"],
        "additionalProperties": true
      }
    }
  },
  "required": ["papers"],
  "additionalProperties": false
}
