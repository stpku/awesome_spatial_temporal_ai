{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Journals",
  "type": "object",
  "properties": {
    "international": {
      "type": "array",
      "items": { "$ref": "#/definitions/journalItem" }
    },
    "chinese": {
      "type": "array",
      "items": { "$ref": "#/definitions/journalItem" }
    }
  },
  "required": ["international", "chinese"],
  "additionalProperties": false,
  "definitions": {
    "journalItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "url": { "type": "string", "format": "uri" }
      },
      "required": ["name", "url"],
      "additionalProperties": true
    }
  }
}
